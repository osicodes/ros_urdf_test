<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- Robot size -->
    <!-- Length = 300mm-->
    <!-- Width = 300mm-->
    <!-- Height = 150mm-->
    
    <xacro:include filename="motor_functions.xacro" /> 

    <link name="base_link">
        
    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="-0.1 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>
    
    <link name="chassis_link">
        <visual>
            <origin xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="WhiteGrey" />
        </visual>
        <collision>
            <origin xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <!-- <gazebo reference="chassis_link">
        <material>Gazebo/Grey</material>
    </gazebo> -->

    <gazebo reference="chassis_link">
        <visual>
            <material>
                <ambient>0.8509 0.8431 0.7921 1.0</ambient>
                <diffuse>0.8509 0.8431 0.7921 1.0</diffuse>
                <specular>0.8509 0.8431 0.7921 1.0 1.0</specular>
                <!-- <emissive>15/255 6/255 179/255 1</emissive> -->
            </material>
        </visual>
    </gazebo>

    <!-- LEFT WHEEL -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel_link"/>
        <origin xyz="0.0 0.15 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="left_wheel_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/> 
            </geometry>
            <material name="LightBlueGreen" />
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/> 
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel_link">
        <visual>
            <material>
                <ambient>0.2353 0.5529 0.5764 1.0</ambient>
                <diffuse>0.2353 0.5529 0.5764 1.0</diffuse>
                <specular>0.2353 0.5529 0.5764 1.0 1.0</specular>
            </material>
        </visual>
    </gazebo>

    <!-- RIGHT WHEEL -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel_link"/>
        <origin xyz="0.0 -0.15 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="right_wheel_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/> 
            </geometry>
            <material name="LightBlueGreen" />
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.04"/> 
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel_link">
        <visual>
            <material>
                <ambient>0.2353 0.5529 0.5764 1.0</ambient>
                <diffuse>0.2353 0.5529 0.5764 1.0</diffuse>
                <specular>0.2353 0.5529 0.5764 1.0 1.0</specular>
            </material>
        </visual>
    </gazebo>

    <!-- CASTER WHEEL -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis_link"/>
        <child link="caster_wheel_link"/>
        <origin xyz="0.25 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>

    <link name="caster_wheel_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
            <material name="BrownBlack"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_link">
        <visual>
            <material>
                <ambient>0.2313 0.2078 0.2078 1.0</ambient>
                <diffuse>0.2313 0.2078 0.2078 1.0</diffuse>
                <specular>0.2313 0.2078 0.2078 1.0 1.0</specular>
            </material>
        </visual>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>